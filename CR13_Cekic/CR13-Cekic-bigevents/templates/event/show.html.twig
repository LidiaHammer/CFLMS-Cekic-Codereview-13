{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}

<div class="card m-5 w-50">
    <h1>Event</h1>

<div class="card">
                        <img class="card-img-top" src={{ event.image }} alt="#">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.name }}</h5>
                            <p class="card-text">{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</p>
                            <p class="card-text">{{ event.description }}</p>
                            <p class="card-text">Capacity: {{ event.capacity }}</p>
                            <p class="card-text">Email: {{ event.email }}</p>
                            <p class="card-text">Phone: {{ event.phone }}</p>
                            <p class="card-text">Address: {{ event.address }}</p>
                            <p class="card-text">URL: {{ event.url }}</p>
                            <p class="card-text"> {{ event.type }}</p>

                        </div>
                       
                    </div>

    <a type="button" class="btn btn-secondary m-1" href="{{ path('event_index') }}">back to list</a>

    <a type="button" class="btn btn-secondary m-1" href="{{ path('event_edit', {'eventId': event.eventId}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
    </div>
{% endblock %}
